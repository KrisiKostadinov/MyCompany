{{#if data }}
<h1 class="display-4 text-center">{{ data.name }}!</h1>
<div class="container">
  {{#each workers }}
<ul class="list-group">
  <li class="list-group-item">
    <span>{{ this.firstName }} {{ this.lastName }}</span>
    <a href="/messages/add/{{this._id}}">Send message</a>
  </li>
</ul>
{{/each}}
</div>
{{else}}
<div class="container mt-4 jumbotron">
  <h1 class="display-4 text-center">Welcome to My Company System!</h1>
  <hr class="my-4">
  <p class="lead">
    <a class="btn btn-primary btn-lg" href="/user/login" role="button">Login</a>
  </p>
</div>
{{/if }}