<div class="mx-auto mt-4 w-50">
  <form action="/news/edit/{{post._id}}" method="POST">
    <h2 class="text-center mb-4">Edit Post</h2>
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" value="{{post.title}}" name="title" id="title" placeholder="Enter title...">
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      <textarea name="content" id="content" class="form-control" rows="7">{{ post.content }}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Edit post</button>
  </form>
</div>