<div class="mx-auto mt-4 w-25">
  <form action="/company/register" method="POST">
    <h2 class="text-center">Create new company</h2>
    <div class="form-group">
      <label for="email">Email address</label>
      <input type="email" class="form-control" id="email" name="email" placeholder="Enter email">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" id="password" name="password" placeholder="Password">
    </div>
    <div class="form-group">
      <label for="email">Company name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Enter company name...">
    </div>
    <button type="submit" class="btn btn-primary">Register the company</button>
  </form>
</div>