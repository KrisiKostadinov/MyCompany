<div class="mx-auto mt-4 w-50">
  <form action="/messages/add/{{receiver._id}}" method="POST">
    <h2 class="text-center mb-4">New Message to {{ receiver.firstName }} {{ receiver.lastName }}</h2>
    <div class="form-group">
      <label for="message">Content</label>
      <input type="text" class="form-control" name="message" id="message" placeholder="Enter message...">
    </div>
    <button type="submit" class="btn btn-primary">Create post</button>
  </form>
</div>